<!DOCTYPE html>
<html ng-app='itemsClient'>
  <head>
    <meta charset="utf-8">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
    <script src="/assets/js/scripts.js" charset="utf-8"></script>
    <link rel="stylesheet" href="/assets/css/styles.css">
    <script src="../app.js" charset="utf-8"></script>
    <script src="/services/itemsApi.js" charset="utf-8"></script>
    <script src="/controllers/items.js" charset="utf-8"></script>
    <title>Shopstream</title>
  </head>
  <body>
    <h1>Howdy</h1>

    <hr>

    <div ng-controller="items">
      <h4>Sell an Item</h4>
      <form ng-submit="addItem()">
        <input type="text" ng-model="newItem.title" value="">
        <input type="number" ng-model="newItem.price" value="">
        <input type="text" ng-model="newItem.url" value="">
        <select type="select" ng-model="newItem.category">
          <option value="yes">Yes</option>
          <option value="no">No</option>
        </select>
        <input type="text" ng-model="newItem.description" value="">
        <button type="submit" name="button">Add Item</button>
      </form>

      <div class="items-container">
        <h4>Items for Sale</h4>
        <div class="item" ng-repeat="item in items"
        >
          <p>
            {{item.title}} {{item.price | currency:"$":0}}
          </p>

        </div>
      </div>

    </div>
  </body>
</html>
